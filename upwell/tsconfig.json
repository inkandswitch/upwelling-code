{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "esnext.asynciterable",
            "es2017",
            "es2016",
            "es2015"
        ],
        "baseUrl": ".",
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "./test/*.ts",
        "automerge-rs",
        "dist"
    ],
        "ts-node": {
            "compilerOptions": {
                "module": "CommonJS"
            }
        }
}